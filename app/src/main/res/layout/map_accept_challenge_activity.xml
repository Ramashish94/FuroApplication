<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.app.furoapp.widget.MyCircleImageView
            android:id="@+id/userProfileAccept"
            android:layout_width="@dimen/dp_90"
            android:layout_height="@dimen/dp_90"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/dp_10"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_profile"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintCircleRadius="@dimen/dp_4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_30"
            android:orientation="vertical">

            <TextView
                android:id="@+id/usernameAccept"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:fontFamily="@font/din_alternate_bold"
                android:text="shettyrohit"
                android:textColor="@color/black_btn"
                android:textSize="@dimen/sp_16" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tvActivityCategory"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:fontFamily="@font/din_alter_nate_bold"
                    android:text="Challanged you for"

                    android:textColor="@color/black_color"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/tvActivityCategoryCountt"
                    android:layout_marginLeft="@dimen/dp_5"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:fontFamily="@font/din_alter_nate_bold"
                    android:text=" 35 "

                    android:textColor="@color/black_color"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/tvActivityCategoryName"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:fontFamily="@font/din_alter_nate_bold"
                    android:text=" Pushups"

                    android:textColor="@color/black_color"
                    android:textSize="@dimen/sp_14" />


            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:padding="@dimen/dp_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView

                android:layout_width="@dimen/dp_35"
                android:layout_height="@dimen/dp_35"
                android:layout_marginLeft="@dimen/dp_10"
                android:padding="@dimen/dp_5"
                android:scaleType="fitCenter"

                android:src="@drawable/tickiconnew" />

            <TextView


                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_25"
                android:fontFamily="@font/bebase_font_family_regular"
                android:text="You have Accepted this Challenge !"

                android:textColor="@color/light_blue"
                android:textSize="@dimen/sp_16" />


        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView

                android:layout_width="@dimen/dp_35"
                android:layout_height="@dimen/dp_35"
                android:layout_marginLeft="@dimen/dp_10"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_photo_camera_black_24dp"
                android:tint="@color/black_color" />

            <TextView


                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_10"
                android:fontFamily="@font/bebase_font_family_regular"
                android:gravity="center"
                android:text="Now start Camera and submit your recording !"

                android:textColor="@color/light_blue"
                android:textSize="@dimen/sp_16" />


        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_200"
        android:layout_marginTop="@dimen/dp_20"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/ivPreviewVideo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_200"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/sample_image" />

        <TextView
            android:id="@+id/textPlayTheRecordedVideo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"

            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginEnd="@dimen/dp_35"
            android:layout_marginBottom="@dimen/dp_12"

            android:src="@drawable/welcome_text"
            android:text="Play Recorded Video"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@android:color/black"
            android:textSize="@dimen/sp_15"
            android:textStyle="italic"
            android:visibility="gone" />

        <FrameLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout

                android:id="@+id/lineaarlayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_200"
                android:gravity="center"
                android:orientation="vertical">

                <FrameLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/videoPreview"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dp_2"


                        android:layout_marginBottom="2dp" />

                    <ProgressBar
                        android:id="@+id/progressbar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/ivPlayButton"
                        android:layout_width="@dimen/dp_30"
                        android:layout_height="@dimen/dp_30"
                        android:layout_gravity="center"
                        android:elevation="@dimen/dp_10"
                        android:scaleType="fitCenter"
                        android:visibility="gone"
                        app:srcCompat="@drawable/ic_play_circle_outline_black_24dp" />

                    <ImageView
                        android:id="@+id/ivPlauseButtonnnn"
                        android:layout_width="@dimen/dp_30"
                        android:layout_height="@dimen/dp_30"
                        android:layout_gravity="center"
                        android:elevation="@dimen/dp_10"
                        android:scaleType="fitCenter"
                        android:visibility="gone"
                        app:srcCompat="@drawable/ic_pause_black_24dp" />

                </FrameLayout>
            </LinearLayout>
        </FrameLayout>


    </FrameLayout>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dp_20"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp_2">


                    <LinearLayout
                        android:id="@+id/imagecircle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/acceptchallengeactivityimage"
                            android:layout_width="@dimen/dp_50"
                            android:layout_height="52dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/rate_compete"
                            android:tint="@color/light_blue" />

                        <TextView

                            android:id="@+id/challangeActivity"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/bebase_font_family_regular"
                            android:text="SQUATS"
                            android:textAllCaps="true"
                            android:textColor="@color/light_blue"
                            android:textSize="@dimen/sp_16" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/bebase_font_family_regular"
                            android:text="Activity"
                            android:textAllCaps="true"
                            android:textColor="@color/black_btn"
                            android:textSize="@dimen/sp_12" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/imageRoad"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/challengeimagereps"
                            android:layout_width="@dimen/dp_50"
                            android:layout_height="@dimen/dp_50"
                            android:scaleType="centerInside"
                            android:src="@drawable/repsblack"
                            android:tint="@color/light_blue" />

                        <TextView
                            android:id="@+id/AcceptchallangeRap"

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/bebase_font_family_regular"
                            android:text="100"
                            android:gravity="center"
                            android:textAllCaps="true"
                            android:textColor="@color/light_blue"
                            android:textSize="@dimen/sp_16" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/bebase_font_family_regular"
                            android:text="REPS"
                            android:textAllCaps="true"
                            android:textColor="@color/black_btn"
                            android:textSize="@dimen/sp_12" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/imagewatch"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/dp_35"
                            android:layout_height="@dimen/dp_35"
                            android:scaleType="centerInside"
                            android:src="@drawable/clock_black"
                            android:tint="@color/light_blue" />

                        <TextView
                            android:id="@+id/AcceptchallangeTimeline"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:fontFamily="@font/bebase_font_family_regular"
                            android:text="7 min 33 sec"
                            android:textAllCaps="true"
                            android:textColor="@color/light_blue"
                            android:textSize="@dimen/sp_16" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/bebase_font_family_regular"
                            android:text="DURATION"
                            android:textAllCaps="true"
                            android:textColor="@color/black_btn"
                            android:textSize="@dimen/sp_12" />

                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_20"
                android:layout_weight="1"
                android:gravity="center"

                android:orientation="horizontal">

                <ImageView

                    android:layout_width="@dimen/dp_35"
                    android:layout_height="@dimen/dp_35"
                    android:scaleType="centerInside"
                    android:src="@drawable/calendericon" />

                <TextView

                    android:id="@+id/Acceptchallangedate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:fontFamily="@font/bebase_font_family_regular"

                    android:gravity="center"
                    android:text="9 October 2019"
                    android:textColor="@color/light_blue"
                    android:textSize="@dimen/sp_16" />

                <ImageView

                    android:layout_width="@dimen/dp_50"
                    android:layout_height="@dimen/dp_50"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:scaleType="centerInside"
                    android:src="@drawable/time_taken"
                    android:tint="@color/black_color" />

                <TextView

                    android:id="@+id/AcceptchallangeTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bebase_font_family_regular"
                    android:text="5.55 am ist"

                    android:textColor="@color/light_blue"
                    android:textSize="@dimen/sp_16" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>