<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize">

                <TextView
                    android:id="@+id/tvProductListHeading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/din_alternate_bold"
                    android:text="Challenges By you"
                    android:textColor="@color/black_btn"
                    android:textSize="@dimen/sp_16"
                    app:textAllCaps="true" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/dp_8">


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/bebasneue_regular"
                    android:gravity="start"
                    android:text="Activity"
                    android:textColor="@android:color/black" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"

                    android:layout_weight="1"
                    android:fontFamily="@font/din_alternate_bold"
                    android:gravity="center"
                    android:text="Date"
                    android:textColor="@color/black_btn" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_weight="1"
                    android:fontFamily="@font/din_alternate_bold"
                    android:gravity="end"
                    android:text="To"
                    android:textColor="@color/black_btn" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="#EDEDED" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/ChallengeByYouViewall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            </androidx.recyclerview.widget.RecyclerView>


            <TextView
                android:id="@+id/youhavechallangeFOR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_30"
                android:fontFamily="@font/din_alternate_bold"
                android:gravity="center"
                android:text="YOU HAVEN'T CHALLENGE ANYONE YET"
                android:textColor="@color/vertical_line_color"
                android:textSize="@dimen/sp_14"
                android:textStyle="italic"
                android:visibility="gone"
                app:textAllCaps="true" />


            <lal.adhish.gifprogressbar.GifView
                android:id="@+id/progressBarJumpingJacks"
                android:layout_width="50dp"
                android:layout_height="50dp"

                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:backgroundTint="@color/white" />


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</layout>
