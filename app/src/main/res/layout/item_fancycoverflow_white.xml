<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:padding="@dimen/dp_10"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/white_gradient"
        android:orientation="vertical">


        <com.app.furoapp.widget.RoundRectCornerImageView
            android:id="@+id/profile_image"
            android:layout_width="wrap_content"

            android:layout_height="@dimen/dp_70"
            android:scaleType="centerInside"
            android:src="@drawable/sample_image"
            app:cornerRadius="@dimen/dp_4"
            app:roundedCorners="all" />

        <TextView
            android:id="@+id/text"
            android:layout_marginTop="@dimen/dp_5"

            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_height="wrap_content"
            android:text="Finished ggggggggggggggggg"
            android:textColor="@color/black_btn"
            android:textSize="@dimen/sp_10" />




    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
