<?xml version="1.0" encoding="utf-8"?>
<layout>

<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="@dimen/dp_4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal">


        <ImageView

            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"
            android:padding="@dimen/dp_2"
            android:scaleType="centerCrop"
            android:src="@drawable/sample_image" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_60"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="@dimen/dp_4">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/din_alternate_bold"
                android:text="The 100km Running club"
                android:textColor="@color/black_btn"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/din_alternate_bold"
                android:text="The 100km Running club"
                android:textColor="@color/bottom_gray"
                android:textSize="@dimen/sp_12" />

        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"
            android:padding="@dimen/dp_20"
            android:rotation="270"
            android:scaleType="centerInside"
            android:src="@drawable/spinner_dropdown"
            android:tint="@color/bottom_gray">

        </ImageView>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
</layout>
