<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize">

                <TextView
                    android:id="@+id/tvProductListHeading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/din_alternate_bold"
                    android:text="Challenges By you"
                    android:textColor="@color/black_btn"
                    android:textSize="@dimen/sp_16"
                    app:textAllCaps="true" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/dp_8">


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/bebasneue_regular"
                    android:gravity="start"
                    android:text="Activity"
                    android:textColor="@android:color/black" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"

                    android:layout_weight="1"
                    android:fontFamily="@font/din_alternate_bold"
                    android:gravity="center"
                    android:text="Date"
                    android:textColor="@color/black_btn" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_weight="1"
                    android:fontFamily="@font/din_alternate_bold"
                    android:gravity="end"
                    android:text="To"
                    android:textColor="@color/black_btn" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="#EDEDED" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/ChallengeByYou"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            </androidx.recyclerview.widget.RecyclerView>


            <TextView
                android:id="@+id/loadmoreBy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_20"
                android:background="@drawable/background_border_sky_blue_with_blue_background_rounded"
                android:elevation="@dimen/dp_4"
                android:fontFamily="@font/bebasneue_regular"
                android:padding="@dimen/dp_7"
                android:text="View All"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:textSize="@dimen/sp_20"
                android:textStyle="italic"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <LinearLayout
                android:layout_marginTop="@dimen/dp_150"
                android:id="@+id/linearLayoutALLCommunity"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:visibility="gone"
                android:gravity="center"
                android:layout_height="match_parent">

                <lal.adhish.gifprogressbar.GifView
                    android:id="@+id/progressBarJumpingJacks"
                    android:layout_width="50dp"
                    android:layout_centerInParent="true"
                    android:layout_margin="@dimen/dp_5"
                    android:backgroundTint="@color/white"
                    android:layout_height="50dp"
                    android:layout_gravity="center" />

                <TextView
                    android:id="@+id/pbText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:visibility="gone"
                    android:textColor="@color/light_blue"
                    android:text="loading ..." />

            </LinearLayout>

            <TextView
                android:id="@+id/youhavenotchallange"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_30"
                android:fontFamily="@font/din_alternate_bold"
                android:gravity="center"
                android:text="You haven't Challenge anyone yet"
                android:textColor="@color/vertical_line_color"
                android:textSize="@dimen/sp_14"
                android:textStyle="italic"
                android:visibility="gone"
                app:textAllCaps="true" />

            <LinearLayout
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="#EDEDED" />


            <TextView
                android:id="@+id/etSignUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_20"

                android:background="@drawable/background_border_sky_blue_with_blue_background_rounded"
                android:elevation="@dimen/dp_4"
                android:fontFamily="@font/bebasneue_regular"
                android:padding="@dimen/dp_8"
                android:text="View All"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:textSize="@dimen/sp_20"
                android:textStyle="italic"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_marginTop="@dimen/dp_20">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/din_alternate_bold"
                    android:text="Challenges For you"
                    android:textColor="@color/black_btn"
                    android:textSize="@dimen/sp_16"
                    app:textAllCaps="true" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp_8">


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/bebasneue_regular"
                        android:gravity="start"
                        android:text="Activity"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_weight="1"
                        android:fontFamily="@font/din_alternate_bold"
                        android:gravity="center"
                        android:text="Date"
                        android:textColor="@color/black_btn" />


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_weight="1"
                        android:fontFamily="@font/din_alternate_bold"
                        android:gravity="end"
                        android:text="By"
                        android:textColor="@color/black_btn" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="#EDEDED" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_8">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/challengeForyou"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </androidx.recyclerview.widget.RecyclerView>

                    <TextView
                        android:id="@+id/youhavechallange"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dp_30"
                        android:fontFamily="@font/din_alternate_bold"
                        android:gravity="center"
                        android:text="No one Challenge you yet"
                        android:textColor="@color/vertical_line_color"
                        android:textSize="@dimen/sp_14"
                        android:textStyle="italic"
                        android:visibility="gone"
                        app:textAllCaps="true" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="#EDEDED" />

            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_20"
                android:id="@+id/loadmorefor"
                android:background="@drawable/background_border_sky_blue_with_blue_background_rounded"
                android:elevation="@dimen/dp_4"
                android:fontFamily="@font/bebasneue_regular"
                android:padding="@dimen/dp_7"
                android:text="View All"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:textSize="@dimen/sp_20"
                android:textStyle="italic"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="#EDEDED" />

            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="?attr/actionBarSize"
                android:layout_marginTop="@dimen/dp_20">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/din_alternate_bold"
                    android:text="Drafts"
                    android:textColor="@color/black_btn"
                    android:textSize="@dimen/sp_16"
                    app:textAllCaps="true" />

                <ImageView
                    android:layout_marginLeft="@dimen/dp_2"
                    android:layout_width="20dp"
                    android:background="@drawable/pencil"
                    android:layout_height="15dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="#EDEDED" />

                <TextView
                    android:layout_width="match_parent"
                    android:textColor="@color/black_btn"
                    android:layout_margin="@dimen/sp_15"
                    android:textSize="@dimen/dp_14"
                    android:visibility="gone"
                    android:text="You are unable to send the challenge due to going back during the process of challenge or some technical issue. The challenge will be stored in your Drafts. You can send it any time in the next 24 hours."
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="#EDEDED" />
                <LinearLayout
                    android:layout_marginTop="@dimen/sp_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp_8">


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/bebasneue_regular"
                        android:gravity="start"
                        android:text="Activity"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_weight="1"
                        android:fontFamily="@font/din_alternate_bold"
                        android:gravity="end"
                        android:text="Date"
                        android:textColor="@color/black_btn" />




                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="#EDEDED" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_8">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/challengeDraftrecycler"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </androidx.recyclerview.widget.RecyclerView>

                    <TextView
                        android:id="@+id/youhavechallangedraft"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dp_30"
                        android:fontFamily="@font/din_alternate_bold"
                        android:gravity="center"
                        android:text="No Challenge in draft"
                        android:textColor="@color/vertical_line_color"
                        android:textSize="@dimen/sp_14"
                        android:textStyle="italic"
                        android:visibility="gone"
                        app:textAllCaps="true" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="#EDEDED" />

            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_20"
                android:id="@+id/loadmorefordraft"
                android:background="@drawable/background_border_sky_blue_with_blue_background_rounded"
                android:elevation="@dimen/dp_4"
                android:fontFamily="@font/bebasneue_regular"
                android:padding="@dimen/dp_7"
                android:text="View All"

                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:textSize="@dimen/sp_20"
                android:textStyle="italic"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</layout>
