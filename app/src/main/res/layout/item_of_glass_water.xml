<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:gravity="center"
    android:layout_marginTop="@dimen/dp_20"
    android:layout_marginLeft="@dimen/dp_8"
    android:layout_marginRight="@dimen/dp_8">

    <LinearLayout
        android:id="@+id/llGlassMeasuring"
        android:layout_width="56dp"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content"
        android:background="@drawable/glassbg1"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivGlass"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_24"
            android:layout_marginTop="@dimen/dp_7"
            android:src="@drawable/glassicon"/>

        <TextView
            android:id="@+id/tvWaterMlSize"
            android:layout_width="match_parent"
            android:layout_height="@dimen/sp_16"
            android:layout_marginTop="@dimen/dp_6"
            android:gravity="center"
            android:text="200 ml" />

        <View
            android:layout_width="41dp"
            android:layout_height="@dimen/dp_2"
            android:layout_marginTop="@dimen/dp_6"
            android:background="@drawable/viewline" />

        <ImageView
            android:id="@+id/ivPlusIcon"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_marginTop="@dimen/dp_6"
            android:src="@drawable/plus_icon" />

        <ImageView
            android:id="@+id/ivCheckIcon"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_marginTop="@dimen/dp_6"
            android:src="@drawable/checkicon"
            android:visibility="gone" />
    </LinearLayout>


</LinearLayout>