<?xml version="1.0" encoding="utf-8"?>
<layout>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivImageVIew"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="center"
            app:srcCompat="@drawable/dots1" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">

            <lal.adhish.gifprogressbar.GifView
                android:visibility="gone"
                android:id="@+id/challengeslockdown"
                android:layout_width="match_parent"

                android:layout_margin="@dimen/dp_5"

                android:layout_height="@dimen/dp_40"
                android:layout_gravity="center" />


            <LinearLayout
                android:layout_marginTop="@dimen/dp_40"
                android:layout_width="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_height="wrap_content">


              <LinearLayout
                  android:layout_width="@dimen/dp_40"
                  android:layout_gravity="center"
                  android:background="@color/white"
                  android:layout_height="@dimen/dp_1"/>

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_marginLeft="@dimen/dp_7"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:fontFamily="@font/bebasneue_regular"
                    android:text="Choose your domain  "
                   android:layout_gravity="center"
                    android:textAllCaps="true"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/sp_16"
                    android:textStyle="italic"
                   />
                <LinearLayout
                    android:layout_width="@dimen/dp_40"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_7"
                    android:background="@color/white"
                    android:layout_height="@dimen/dp_1"/>

            </LinearLayout>

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"


                android:layout_marginBottom="@dimen/dp_20"
                android:fontFamily="@font/bebasneue_regular"
                android:text=" challenge your friends "
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:textStyle="italic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <ExpandableListView
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_40"
                android:id="@+id/expandedListItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:groupIndicator="@null"
                android:divider="#00000000"


                android:dividerHeight="@dimen/dp_10"
                android:childDivider="#00000000">


            </ExpandableListView>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutChoose"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:visibility="gone"
            android:layout_gravity="center"
            android:gravity="center"


            android:layout_height="wrap_content">

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_gravity="center"


                android:layout_width="45dp"
                android:indeterminateTint="@color/white"
                android:layout_height="45dp"
                android:visibility="visible"

                />

            <!-- <TextView
                 android:id="@+id/pbText"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textStyle="bold"
                 android:layout_marginLeft="@dimen/dp_10"


                 android:visibility="visible"
                 android:textColor="@color/white"
                 android:text="loading ..."/>-->

        </LinearLayout>

    </FrameLayout>
</layout>