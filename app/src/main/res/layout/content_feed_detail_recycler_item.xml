<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bottom_gray">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="@dimen/dp_4">


                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_4"
                    android:text="How to Run Like a Pro for Beginners:"
                    android:textAlignment="textStart"
                    android:textColor="@color/black_btn"
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/part1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_4"
                    android:text="Part 1"
                    android:textAlignment="textStart"
                    android:textColor="@color/black_btn"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold"
                    android:visibility="gone" />


                <LinearLayout

                    android:id="@+id/relativelayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView

                        android:id="@+id/title1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_10"
                        android:textAlignment="textStart"
                        android:textAllCaps="true"
                        android:textColor="@color/black_btn"
                        android:textSize="@dimen/sp_14"
                        android:textStyle="bold" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/contentdetailimageVideo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:scaleType="fitCenter" />


                        <ImageView
                            android:id="@+id/contentdetailimage"
                            android:layout_width="match_parent"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_marginRight="@dimen/dp_10"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"

                            android:background="@drawable/background_border_gray_with_white_back_rounded"
                            android:scaleType="fitCenter" />

                        <ImageView
                            android:id="@+id/ivPlayIconAllListNew"
                            android:layout_width="@dimen/dp_40"
                            android:layout_height="@dimen/dp_40"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_play_button"
                            android:tint="@android:color/white"
                            android:visibility="gone" />

                        <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
                            android:id="@+id/youtubebe_player"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone">

                        </com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView>

                    </FrameLayout>

                    <TextView
                        android:id="@+id/paragraph"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_marginRight="@dimen/dp_5"
                        android:padding="@dimen/dp_6"
                        android:textAlignment="textStart"
                        android:textColor="@color/black_btn"
                        android:textSize="@dimen/sp_13"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/title2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_10"

                        android:textAlignment="textStart"
                        android:textColor="@color/black_btn"
                        android:textSize="@dimen/sp_14"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/link"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_marginRight="@dimen/dp_5"
                        android:linksClickable="true"
                        android:padding="@dimen/dp_4"
                        android:textAlignment="textStart"
                        android:textColor="@color/light_blue"
                        android:textSize="@dimen/sp_14"
                        android:textStyle="normal" />

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
</layout>