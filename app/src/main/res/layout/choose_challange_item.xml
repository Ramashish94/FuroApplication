<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout

        android:id="@+id/llFlexibiltyChallenges"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_40"
        android:layout_marginEnd="@dimen/dp_40"
        android:background="@drawable/background_border_black_with_black_rounded"
        android:gravity="center"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/ivStretch"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_marginStart="@dimen/dp_4"
            android:layout_marginTop="@dimen/dp_2"
            android:layout_marginBottom="@dimen/dp_2"
            android:padding="@dimen/dp_4"
            android:src="@drawable/vector_smart_object_stretching"
            app:srcCompat="@drawable/vector_smart_object_stretching" />


        <TextView
            android:id="@+id/Flexibility"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:fontFamily="@font/bebase_font_family_regular"
            android:text="
"           android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp_12"
            android:textStyle="italic" />

        <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_4"
            android:padding="@dimen/dp_4"
            android:rotation="180"
            android:src="@drawable/back_icon" />
    </LinearLayout>
</LinearLayout>