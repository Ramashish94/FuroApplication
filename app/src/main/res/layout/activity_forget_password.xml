<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"

        android:background="@drawable/sign_up_background"

        android:orientation="vertical">

        <EditText
            android:id="@+id/verifiedEmail"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_gravity="center"

            android:layout_marginLeft="32dp"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginRight="32dp"
            android:background="@drawable/background_border_gray_with_white_back_rounded"

            android:fontFamily="@font/din_alternate_bold"
            android:gravity="center"
            android:hint="Email"
            android:padding="@dimen/dp_8"

            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:textSize="@dimen/sp_18" />



        <TextView

            android:id="@+id/sendEmailVerified"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:layout_marginStart="32dp"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="@dimen/dp_8"
            android:background="@drawable/background_border_sky_blue_with_blue_background_rounded"
            android:elevation="@dimen/dp_4"
            android:fontFamily="@font/bebasneue_regular"
            android:letterSpacing=".05"
            android:padding="@dimen/dp_8"

            android:text="Send"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:textSize="@dimen/sp_20"
            android:textStyle="italic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:visibility="gone"

            android:id="@+id/linearLayout"
            android:gravity="center"

            android:layout_height="wrap_content">

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:visibility="visible"

                />

            <TextView
                android:id="@+id/pbText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/dp_10"

                android:visibility="gone"
                android:textColor="@color/light_blue"
                android:text="loading ..."/>

        </LinearLayout>

    </LinearLayout>
</layout>