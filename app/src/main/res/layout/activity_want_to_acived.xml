<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_of_tell_us_more_2"
    android:orientation="vertical"
    tools:context=".activity.newFeature.StepsTracker.WantToAcivedActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="?actionBarSize">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_30"
                    android:fontFamily="@font/bebas_neue_bold"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="What do you want to achieved ?"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp_20"
                    android:textStyle="italic" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_35"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_10"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_140"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/llLooseWeight"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/dp_10"
                        android:layout_weight="1"
                        android:background="@drawable/bg_view_clip"
                        android:elevation="@dimen/dp_5"
                        android:orientation="vertical">
                        <!--android:background="@drawable/white_bg_for_what_we_achived"-->

                        <ImageView
                            android:id="@+id/ivLooseWeightUnselected"
                            android:layout_width="@dimen/dp_40"
                            android:layout_height="@dimen/dp_40"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/dp_16"
                            android:layout_weight="1"
                            android:src="@drawable/loose_weight_unselect" />

                        <ImageView
                            android:id="@+id/ivLooseWeightSelected"
                            android:layout_width="@dimen/dp_40"
                            android:layout_height="@dimen/dp_40"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/dp_15"
                            android:layout_weight="1"
                            android:src="@drawable/loose_weight_selected"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/tvLooseWeight"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/bebas_neue_bold"
                            android:layout_marginTop="@dimen/dp_10"
                            android:gravity="center_horizontal"
                            android:text="Loose weight"
                            android:textColor="@color/white"
                            android:textStyle="italic" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llStayHealthy"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_weight="1"
                        android:background="@drawable/bg_view_clip"
                        android:elevation="@dimen/dp_5"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/ivStayHealthyUnSelected"
                            android:layout_width="@dimen/dp_40"
                            android:layout_height="@dimen/dp_40"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/dp_16"
                            android:layout_weight="1"
                            android:src="@drawable/stay_healthy_unselected" />

                        <ImageView
                            android:id="@+id/ivStayHealthySelected"
                            android:layout_width="@dimen/dp_40"
                            android:layout_height="@dimen/dp_40"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/dp_15"
                            android:layout_weight="1"
                            android:src="@drawable/stay_healthy_selected"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/tvStayHealthy"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/bebas_neue_bold"
                            android:gravity="center_horizontal"
                            android:text="Stay healthy"
                            android:layout_marginTop="@dimen/dp_10"
                            android:textColor="@color/white"
                            android:textStyle="italic" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_140"
                    android:layout_marginTop="@dimen/dp_20"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/llStayActive"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/dp_10"
                        android:layout_weight="1"
                        android:background="@drawable/bg_view_clip"
                        android:elevation="@dimen/dp_5"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/ivStayActiveUnSelected"
                            android:layout_width="@dimen/dp_40"
                            android:layout_height="@dimen/dp_40"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/dp_16"
                            android:layout_weight="1"
                            android:src="@drawable/stay_active_unselected" />

                        <ImageView
                            android:id="@+id/ivStayActiveSelected"
                            android:layout_width="@dimen/dp_40"
                            android:layout_height="@dimen/dp_40"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/dp_16"
                            android:layout_weight="1"
                            android:src="@drawable/stay_active_selected"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/tvStayActive"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/bebas_neue_bold"
                            android:gravity="center_horizontal"
                            android:layout_marginTop="@dimen/dp_10"
                            android:text="Stay active"
                            android:textColor="@color/white"
                            android:textStyle="italic" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llCaloriesCalculator"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_weight="1"
                        android:background="@drawable/bg_view_clip"
                        android:elevation="@dimen/dp_5"
                        android:orientation="vertical"
                        android:visibility="invisible">


                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:layout_margin="42dp"
        android:layout_marginBottom="32dp"
        android:gravity="bottom"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/ivContinue"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_gravity="bottom"
            android:src="@drawable/conti" />

        <ImageView
            android:id="@+id/ivSkip"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_gravity="bottom"
            android:layout_marginTop="@dimen/dp_10"
            android:src="@drawable/skipbn" />

    </LinearLayout>
</LinearLayout>