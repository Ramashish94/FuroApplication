<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.app.furoapp.widget.MyCircleImageView
                android:id="@+id/userProfile"
                android:layout_width="@dimen/dp_90"
                android:layout_height="@dimen/dp_90"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/dp_10"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_profile"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintCircleRadius="@dimen/dp_4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_30"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/username"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:fontFamily="@font/din_alternate_bold"
                    android:text="shettyrohit"
                    android:textColor="@color/black_btn"
                    android:textSize="@dimen/sp_16" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"

                    android:layout_height="wrap_content">


                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:fontFamily="@font/din_alter_nate_bold"
                        android:text="Challenged you for "

                        android:textColor="@color/black_color"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/tvActivityCategorycount"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:fontFamily="@font/din_alter_nate_bold"
                        android:text="35"

                        android:textColor="@color/black_color"
                        android:textSize="@dimen/sp_14" />

                    <TextView


                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:fontFamily="@font/din_alter_nate_bold"
                        android:text="m"

                        android:textColor="@color/black_color"
                        android:textSize="@dimen/sp_14" />



                    <TextView
                        android:id="@+id/tvActivityCategoryName"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_5"

                        android:fontFamily="@font/din_alter_nate_bold"
                        android:text=" Pushups"

                        android:textColor="@color/black_color"
                        android:textSize="@dimen/sp_14" />



                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                <TextView


                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"

                    android:fontFamily="@font/din_alter_nate_bold"
                    android:text="in"

                    android:textColor="@color/black_color"
                    android:textSize="@dimen/sp_14" />



                <TextView

                    android:id="@+id/reciveDuration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"

                    android:fontFamily="@font/din_alter_nate_bold"
                    android:text=""

                    android:textColor="@color/black_color"
                    android:textSize="@dimen/sp_14" />

                    <TextView


                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:fontFamily="@font/din_alter_nate_bold"
                        android:text="m/s"
                        android:textColor="@color/black_color"
                        android:textSize="@dimen/sp_14" />

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_200"
            android:layout_marginTop="@dimen/dp_20"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/ivPreviewVideo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/sample_image" />



            <FrameLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content">



                    <FrameLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_gravity="center_horizontal">

                        <ImageView
                            android:id="@+id/mapPreview"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/dp_2"
                            android:layout_marginBottom="2dp" />





                    </FrameLayout>

            </FrameLayout>


        </FrameLayout>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/dp_20"
                        android:orientation="horizontal"
                        android:padding="@dimen/dp_2">


                        <LinearLayout
                            android:id="@+id/imagecircle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/imageActivityReciewe"
                                android:layout_width="@dimen/dp_50"
                                android:layout_height="52dp"
                                android:scaleType="centerInside"
                                android:src="@drawable/rate_compete"
                                android:tint="@color/light_blue" />

                            <TextView

                                android:id="@+id/challangeActivityReciewe"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:fontFamily="@font/bebase_font_family_regular"
                                android:text="SQUATS"
                                android:textAllCaps="true"
                                android:textColor="@color/light_blue"
                                android:textSize="@dimen/sp_16" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/bebase_font_family_regular"
                                android:text="Activity"
                                android:textAllCaps="true"
                                android:textColor="@color/black_btn"
                                android:textSize="@dimen/sp_12" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/imageRoad"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/challengerepsicon"
                                android:layout_width="46dp"
                                android:layout_height="@dimen/dp_50"
                                android:scaleType="centerInside"
                                android:src="@drawable/roaddistance"
                                android:tint="@color/light_blue" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                            <TextView
                                android:id="@+id/challangeRecieweRapdistance"

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/bebase_font_family_regular"
                                android:text="100"
                                android:textAllCaps="true"
                                android:textColor="@color/light_blue"
                                android:textSize="@dimen/sp_16" />

                                <TextView

                                    android:layout_width="wrap_content"
                                    android:layout_marginLeft="@dimen/dp_5"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/bebase_font_family_regular"
                                    android:text="m"
                                    android:textAllCaps="true"
                                    android:textColor="@color/black_btn"
                                    android:textSize="@dimen/sp_16" />


                            </LinearLayout>

                            <TextView
                                android:layout_width="match_parent"
                                android:gravity="center"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/bebase_font_family_regular"
                                android:text="Distance"
                                android:textAllCaps="true"
                                android:textColor="@color/black_btn"
                                android:textSize="@dimen/sp_12" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/imagewatch"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="@dimen/dp_35"
                                android:layout_height="@dimen/dp_35"
                                android:scaleType="centerInside"
                                android:src="@drawable/clock_black"
                                android:tint="@color/light_blue" />

                            <TextView
                                android:id="@+id/challangeTimeline"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/bebase_font_family_regular"
                                android:text="7 min 33 sec"
                                android:gravity="center"
                                android:textAllCaps="true"
                                android:textColor="@color/light_blue"
                                android:textSize="@dimen/sp_16" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/bebase_font_family_regular"
                                android:text="DURATION"
                                android:textAllCaps="true"
                                android:textColor="@color/black_btn"
                                android:textSize="@dimen/sp_12" />

                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>

                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"

                    android:orientation="horizontal">

                    <ImageView

                        android:layout_width="@dimen/dp_35"
                        android:layout_height="@dimen/dp_35"
                        android:scaleType="centerInside"
                        android:src="@drawable/calendericon" />

                    <TextView

                        android:id="@+id/challangedateReciewe"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginLeft="@dimen/dp_5"

                        android:fontFamily="@font/bebase_font_family_regular"
                        android:text="9 October 2019"
                        android:textColor="@color/light_blue"
                        android:textSize="@dimen/sp_16" />

                    <ImageView

                        android:layout_width="@dimen/dp_50"
                        android:layout_height="@dimen/dp_50"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:scaleType="centerInside"
                        android:src="@drawable/time_taken"
                        android:tint="@color/black_color" />

                    <TextView

                        android:id="@+id/challangeTimeRecieveitem"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bebase_font_family_regular"
                        android:text="5.55 am ist"

                        android:textColor="@color/light_blue"
                        android:textSize="@dimen/sp_16" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>