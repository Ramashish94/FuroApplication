<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"

                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:src="@drawable/back_icon"
                    android:tint="@color/black_btn" />

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginEnd="@dimen/dp_4"
                    android:ellipsize="end"
                    android:fontFamily="@font/bebasneue_regular"
                    android:gravity="center"
                    android:maxWidth="@dimen/dp_200"
                    android:maxLines="2"
                    android:padding="@dimen/dp_10"
                    android:text="Challange created by you on 7 july 2019"
                    android:textAllCaps="false"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/sp_20"
                    android:visibility="visible" />

            </LinearLayout>


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_200"
                android:layout_marginTop="@dimen/dp_50"
                android:gravity="center_horizontal"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/ivPreviewVideo"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_150"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/image_4" />

                <FrameLayout
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10">

                    <LinearLayout
                        android:id="@+id/lineaarlayout"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_150"
                        android:gravity="center"
                        android:orientation="vertical">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginLeft="@dimen/dp_35"
                            android:layout_marginRight="@dimen/dp_35">

                            <VideoView
                                android:id="@+id/videoPreview"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_horizontal"
                                android:visibility="gone" />

                            <ImageView
                                android:id="@+id/ivPlayButton"
                                android:layout_width="@dimen/dp_60"
                                android:layout_height="@dimen/dp_60"
                                android:layout_gravity="center"
                                android:elevation="@dimen/dp_10"
                                android:scaleType="centerInside"
                                app:srcCompat="@drawable/ic_play_circle_outline_black_24dp" />

                            <ImageView
                                android:id="@+id/ivPlauseButtonnnn"
                                android:layout_width="@dimen/dp_35"
                                android:layout_height="@dimen/dp_35"
                                android:layout_gravity="center"
                                android:elevation="@dimen/dp_10"
                                android:scaleType="centerInside"
                                android:visibility="gone"
                                app:srcCompat="@drawable/ic_pause_black_24dp" />

                        </FrameLayout>
                    </LinearLayout>
                </FrameLayout>


            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxWidth="@dimen/dp_200"
                    android:maxLines="2"
                    android:padding="@dimen/dp_8"
                    android:text="CHALLANGE TARGET"
                    android:textAllCaps="false"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/sp_18"
                    android:visibility="visible" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:padding="@dimen/dp_2">


                                <LinearLayout
                                    android:id="@+id/imagecircle"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/image1"
                                        android:layout_width="@dimen/dp_50"
                                        android:layout_height="@dimen/dp_50"
                                        android:scaleType="centerInside"
                                        android:src="@drawable/rate_compete"
                                        android:tint="@color/light_blue" />

                                    <TextView

                                        android:id="@+id/completionRate"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/bebase_font_family_regular"
                                        android:text="SQUATS"
                                        android:textAllCaps="true"
                                        android:textColor="@color/light_blue"
                                        android:textSize="@dimen/sp_18" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/bebase_font_family_regular"
                                        android:text="Activity"
                                        android:textAllCaps="true"
                                        android:textColor="@color/black_btn"
                                        android:textSize="@dimen/sp_12" />

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/imageRoad"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="@dimen/dp_50"
                                        android:layout_height="@dimen/dp_50"
                                        android:scaleType="centerInside"
                                        android:src="@drawable/roaddistance"
                                        android:tint="@color/light_blue" />

                                    <TextView
                                        android:id="@+id/challangetarget"

                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/bebase_font_family_regular"
                                        android:text="100"
                                        android:textAllCaps="true"
                                        android:textColor="@color/light_blue"
                                        android:textSize="@dimen/sp_18" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/bebase_font_family_regular"
                                        android:text="RAPS"
                                        android:textAllCaps="true"
                                        android:textColor="@color/black_btn"
                                        android:textSize="@dimen/sp_12" />

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/imagewatch"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="@dimen/dp_50"
                                        android:layout_height="@dimen/dp_50"
                                        android:scaleType="centerInside"
                                        android:src="@drawable/time_taken"
                                        android:tint="@color/light_blue" />

                                    <TextView
                                        android:id="@+id/challangeTimeline"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/bebase_font_family_regular"
                                        android:text="7 min 33 sec"
                                        android:textAllCaps="true"
                                        android:textColor="@color/light_blue"
                                        android:textSize="@dimen/sp_18" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/bebase_font_family_regular"
                                        android:text="DURATION"
                                        android:textAllCaps="true"
                                        android:textColor="@color/black_btn"
                                        android:textSize="@dimen/sp_12" />

                                </LinearLayout>


                            </LinearLayout>


                        </LinearLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/runningclub"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_10"
                        android:fontFamily="@font/din_alternate_bold"
                        android:text="Challanges for "
                        android:textColor="@color/bottom_gray"
                        android:textSize="@dimen/sp_12" />

                    <TextView
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:fontFamily="@font/din_alternate_bold"
                        android:text="Public "
                        android:textColor="@color/black_btn"
                        android:textSize="@dimen/sp_12" />


                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_24"
                    android:layout_marginTop="@dimen/dp_8"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="start"
                        android:layout_marginStart="@dimen/dp_20"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:fontFamily="@font/din_alternate_bold"
                        android:text="Name"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="end"
                        android:layout_marginEnd="@dimen/dp_20"
                        android:fontFamily="@font/din_alternate_bold"
                        android:text="status"
                        android:textColor="@color/black_btn"
                        android:textSize="@dimen/sp_14" />


                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:background="@color/bottom_gray">

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_24"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentBottom="true"
                        android:layout_gravity="start"
                        android:layout_marginStart="@dimen/dp_20"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/din_alternate_bold"
                        android:text="Anurag"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/sp_10" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_gravity="end"
                        android:layout_marginEnd="@dimen/dp_20"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/din_alternate_bold"
                        android:text="pending"
                        android:textColor="@color/black_btn"
                        android:textSize="@dimen/sp_10" />


                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:background="@color/bottom_gray">

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_24"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="start"
                        android:layout_marginStart="@dimen/dp_20"
                        android:fontFamily="@font/din_alternate_bold"
                        android:text="Nishant"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/sp_10" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="end"
                        android:layout_marginEnd="@dimen/dp_20"
                        android:fontFamily="@font/din_alternate_bold"
                        android:text="Deleted"
                        android:textColor="@color/light_blue"
                        android:textSize="@dimen/sp_10" />


                </RelativeLayout>


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>
</layout>