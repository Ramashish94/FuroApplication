<?xml version="1.0" encoding="utf-8"?>

<layout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:gravity="center"
    android:background="@drawable/sign_up_background"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/user_otp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_gravity="center"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginRight="32dp"
        android:background="@drawable/background_border_gray_with_white_back_rounded"
        android:fontFamily="@font/din_alternate_bold"
        android:gravity="center"
        android:hint="Otp"
        android:padding="@dimen/dp_8"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:textSize="@dimen/sp_18" />

    <EditText
        android:id="@+id/email_id_Forget"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_gravity="center"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginRight="32dp"
        android:background="@drawable/background_border_gray_with_white_back_rounded"
        android:fontFamily="@font/din_alternate_bold"
        android:gravity="center"
        android:hint="Email"
        android:padding="@dimen/dp_8"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:textSize="@dimen/sp_18" />

    <EditText
        android:id="@+id/password_forget"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_gravity="center"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginRight="32dp"
        android:inputType="textPassword"
        android:background="@drawable/background_border_gray_with_white_back_rounded"
        android:fontFamily="@font/din_alternate_bold"
        android:gravity="center"
        android:hint="Password"
        android:padding="@dimen/dp_8"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:textSize="@dimen/sp_18" />

    <EditText
        android:id="@+id/confirm_password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_gravity="center"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginRight="32dp"
        android:inputType="textPassword"
        android:background="@drawable/background_border_gray_with_white_back_rounded"
        android:fontFamily="@font/din_alternate_bold"
        android:gravity="center"
        android:hint="Confirm Password"
        android:padding="@dimen/dp_8"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:textSize="@dimen/sp_18" />

    <TextView

        android:id="@+id/changedPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:layout_marginStart="32dp"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="@dimen/dp_8"
        android:background="@drawable/background_border_sky_blue_with_blue_background_rounded"
        android:elevation="@dimen/dp_4"
        android:fontFamily="@font/bebasneue_regular"
        android:letterSpacing=".05"
        android:padding="@dimen/dp_8"
        android:text="Change Password"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:textSize="@dimen/sp_20"
        android:textStyle="italic" />

</LinearLayout>
</layout>