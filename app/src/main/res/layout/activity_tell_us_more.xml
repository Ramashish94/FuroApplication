<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgound33"
    tools:context=".activity.newFeature.waterIntakeCalculator.TellUsMoreActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:layout_marginTop="80dp"
                android:src="@drawable/telus2" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="30dp"
                android:src="@drawable/intro2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_40"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="320dp"
                    android:layout_height="22dp"
                    android:layout_marginEnd="@dimen/dp_30"
                    android:text=" Select your Weight / Enter Manually"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="#6B6B6B"
                    android:textSize="@dimen/sp_10"
                    android:textStyle="italic"
                    android:textAllCaps="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/height_ruler_picker" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginTop="13dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvHeightRulerValueInCms"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bebase_neue"
                        android:text="133 cm "
                        android:textAllCaps="true"
                        android:textColor="@color/light_blue"
                        android:textSize="30sp"
                        android:textStyle="italic" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="s  "
                        android:textColor="@color/light_blue"
                        android:textSize="14sp"
                        android:textStyle="italic" />

                    <TextView
                        android:id="@+id/tvHeightRulerValueInFeet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bebase_neue"
                        android:text="(4 "
                        android:textAllCaps="true"
                        android:textColor="@color/light_blue"
                        android:textSize="30sp"
                        android:textStyle="italic" />

                    <TextView
                        android:id="@+id/tvHeightRulerValueInInch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bebase_neue"
                        android:text="5'')"
                        android:textAllCaps="true"
                        android:textColor="@color/light_blue"
                        android:textSize="30sp"
                        android:textStyle="italic" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginRight="@dimen/dp_30"
                    android:background="@drawable/viewline" />

                <com.kevalpatel2106.rulerpicker.RulerValuePicker
                    android:id="@+id/heightRulerPicker"
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/bg_rullar3"
                    app:indicator_color="#B4B4B4"
                    app:indicator_interval="6dp"
                    app:indicator_width="2dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:max_value="350"
                    app:min_value="100"
                    app:notch_color="#B4B4B4"
                    app:ruler_text_color="#B4B4B4"
                    app:ruler_text_size="4sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_40"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/weight_picker_heading"
                    android:layout_width="320dp"
                    android:layout_height="22dp"
                    android:layout_marginEnd="@dimen/dp_30"
                    android:text=" Select your Weight / Enter Manually"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="#6B6B6B"
                    android:textSize="@dimen/sp_10"
                    android:textAllCaps="true"
                    android:textStyle="italic"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/height_ruler_picker" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginTop="13dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvWeightRulerValueInKgs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bebase_neue"
                        android:text="78 kg "
                        android:textColor="@color/light_blue"
                        android:textSize="30sp"
                        android:textStyle="italic" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="13dp"
                        android:text="s"
                        android:textColor="@color/light_blue"
                        android:textSize="14sp"
                        android:textStyle="italic"
                        android:visibility="invisible"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/viewline"
                    android:layout_marginRight="@dimen/dp_30"/>

                <com.kevalpatel2106.rulerpicker.RulerValuePicker
                    android:id="@+id/weightRulerPicker"
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginRight="@dimen/dp_30"
                    android:background="@drawable/bg_rullar3"
                    android:elevation="4dp"
                    app:indicator_color="#B4B4B4"
                    app:indicator_interval="9dp"
                    app:indicator_width="2dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/weight_value_tv"
                    app:max_value="200"
                    app:min_value="25"
                    app:notch_color="#B4B4B4"
                    app:ruler_text_color="#B4B4B4"
                    app:ruler_text_size="6sp"
                    tools:targetApi="lollipop" />

            </LinearLayout>

            <ImageView
                android:id="@+id/ivContinue"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_gravity="bottom"
                android:layout_marginLeft="@dimen/dp_40"
                android:layout_marginRight="@dimen/dp_40"
                android:layout_marginBottom="@dimen/dp_45"
                android:layout_marginTop="@dimen/dp_120"
                android:background="@drawable/continue1"/>

        </LinearLayout>


    </androidx.core.widget.NestedScrollView>
</LinearLayout>


