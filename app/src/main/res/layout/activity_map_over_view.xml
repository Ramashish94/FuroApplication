<?xml version="1.0" encoding="utf-8"?>
<layout>
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivImageVIew"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTextSecond"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_75"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_marginEnd="@dimen/dp_75"
                android:fontFamily="@font/din_alternate_bold"
                android:src="@drawable/welcome_text"
                android:text="Go to Maps"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sp_14"
                android:textStyle="italic" />


            <View
                android:layout_width="@dimen/dp_1"
                android:layout_height="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_marginBottom="@dimen/dp_4"
                android:background="@color/vertical_line_color" />


            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_75"
                android:layout_marginEnd="@dimen/dp_75"
                android:fontFamily="@font/din_alternate_bold"
                android:src="@drawable/welcome_text"
                android:text="Step 1"
                android:textAlignment="center"
                android:textColor="@color/light_blue"
                android:textSize="@dimen/sp_16"
                android:textStyle="italic" />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_75"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_marginEnd="@dimen/dp_75"
                android:fontFamily="@font/din_alternate_bold"
                android:src="@drawable/welcome_text"
                android:text="Click on Start button."
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sp_14"
                android:textStyle="italic" />


            <View
                android:layout_width="@dimen/dp_1"
                android:layout_height="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_marginBottom="@dimen/dp_4"
                android:background="@color/vertical_line_color" />


            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/din_alternate_bold"
                android:src="@drawable/welcome_text"
                android:text="Step 2"

                android:textAlignment="center"
                android:textColor="@color/light_blue"
                android:textSize="@dimen/sp_16"
                android:textStyle="italic" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_75"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_marginEnd="@dimen/dp_75"
                android:fontFamily="@font/din_alternate_bold"
                android:src="@drawable/welcome_text"
                android:text="Finish your Endurance Activity and Click Stop."
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sp_14"
                android:textStyle="italic" />


            <View
                android:layout_width="1dp"
                android:layout_height="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_4"
                android:background="@color/vertical_line_color" />


            <TextView
                android:id="@+id/tvStartMap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginStart="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_30"
                android:layout_marginEnd="@dimen/dp_30"
                android:layout_marginBottom="@dimen/dp_30"
                android:background="@drawable/background_border_sky_blue_with_blue_background_rounded"
                android:fontFamily="@font/bebasneue_regular"
                android:padding="@dimen/dp_8"
                android:text="Start"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:textSize="@dimen/sp_20"
                android:textStyle="italic" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_marginEnd="@dimen/dp_40"
                android:fontFamily="@font/din_alternate_bold"
                android:src="@drawable/welcome_text"
                android:text="Share your Achievement and Invite Friends."
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sp_14"
                android:textStyle="italic" />

        </LinearLayout>


    </FrameLayout>
</layout>