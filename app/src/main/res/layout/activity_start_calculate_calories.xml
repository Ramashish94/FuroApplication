<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_steps_tracker"
    android:orientation="vertical"
    tools:context=".activity.newFeature.caloriesCalculator.CalculateCaloriesStartActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="80dp"
                android:layout_weight="1"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginTop="@dimen/sp_16"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bebase_font_family_regular"
                        android:gravity="center_vertical"
                        android:text="FQ "
                        android:textColor="@color/light_blue"
                        android:textSize="@dimen/dp_30"
                        android:textStyle="italic" />

                    <TextView
                        android:layout_width="294dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bebase_font_family_regular"
                        android:text=" Calorie Intake"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dp_30"
                        android:textStyle="italic" />

                </LinearLayout>

                <TextView
                    android:layout_width="294dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/bebase_font_family_regular"
                    android:text="Calculator"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp_30"
                    android:textStyle="italic" />

                <TextView
                    android:layout_width="294dp"
                    android:layout_height="@dimen/dp_50"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginBottom="@dimen/dp_30"
                    android:gravity="center_vertical"
                    android:text="Get the idea of how much calories required\nper day. "
                    android:textColor="@color/white"
                    android:textStyle="italic" />

                <!--<ImageView
                    android:layout_width="294dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="?actionBarSize"
                    android:src="@drawable/trck_your_steps" />

                  <ImageView
                      android:layout_width="294dp"
                      android:layout_height="@dimen/dp_50"
                      android:layout_gravity="center_horizontal"
                      android:layout_marginTop="@dimen/dp_5"
                      android:src="@drawable/track_content" />-->
            </LinearLayout>

        </LinearLayout>


        <TextView
            android:id="@+id/tvStart"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_40"
            android:layout_gravity="bottom|center"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_30"
            android:layout_marginBottom="?actionBarSize"
            android:background="@drawable/rectangle_blue_start_challange"
            android:fontFamily="@font/bebase_neue"
            android:gravity="center"
            android:text="Start"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textStyle="italic" />

    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>