                        android:textSize="@dimen/sp_12" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_10"
                    android:orientation="horizontal">


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dp_2"
                        android:src="@drawable/bullets" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_10"
                        android:layout_marginEnd="@dimen/dp_20"
                        android:layout_marginRight="@dimen/dp_10"
                        android:fontFamily="@font/din_alternate_bold"
                        android:text=" Your last 5 challenges will be saved for 12 months."
                        android:textColor="@color/black_btn"
                        android:textSize="@dimen/sp_12" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_10"
                    android:orientation="horizontal">


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dp_2"
                        android:src="@drawable/bullets" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_10"
                        android:layout_marginEnd="@dimen/dp_20"
                        android:layout_marginRight="@dimen/dp_10"
                        android:fontFamily="@font/din_alternate_bold"
                        android:text="Spammers will be blocked from the app and community in order to maintain the community standards."
                        android:textColor="@color/black_btn"
                        android:textSize="@dimen/sp_12" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_10"
                    android:orientation="horizontal">


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dp_2"
                        android:src="@drawable/bullets" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_10"
                        android:layout_marginEnd="@dimen/dp_20"
                        android:layout_marginRight="@dimen/dp_10"
                        android:fontFamily="@font/din_alternate_bold"
                        android:text="Check your submissions before sharing with other, Furo FQ is not responsible for the content you share."
                        android:textColor="@color/black_btn"
                        android:textSize="@dimen/sp_12" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:layout_marginLeft="33dp"
                android:layout_marginTop="114dp"
                android:layout_marginRight="33dp"
                android:layout_marginBottom="56dp"
                android:background="@drawable/rectangle_blue_start_challange">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_110"
                    android:layout_marginTop="13dp"
                    android:layout_marginRight="@dimen/dp_110"
                    android:layout_marginBottom="13dp"
                    android:src="@drawable/startchallenge" />
            </LinearLayout>
        </LinearLayout>


    </androidx.core.widget.NestedScrollView>
</LinearLayout>