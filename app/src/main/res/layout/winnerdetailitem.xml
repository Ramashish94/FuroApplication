<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_height="wrap_content">


            <com.app.furoapp.widget.MyCircleImageView
                android:id="@+id/ivUserProfile"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="@dimen/dp_120"
                android:layout_height="@dimen/dp_120"
                app:layout_constraintCircleRadius="@dimen/dp_4"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:scaleType="centerCrop"
                android:src="@drawable/profileiconnewmap"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_2"

                android:layout_below="@+id/ivUserProfile"
                android:layout_alignStart="@+id/ivUserProfile"
                android:layout_alignEnd="@+id/ivUserProfile"
                android:fontFamily="@font/bebasneue_regular"

                android:maxWidth="@dimen/dp_200"
                android:maxLines="2"
                android:text="Congrats"
                android:textColor="@android:color/black"
                android:textSize="@dimen/sp_18"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/ivUserProfile"
                app:layout_constraintStart_toStartOf="@+id/ivUserProfile"
                app:layout_constraintTop_toBottomOf="@+id/ivUserProfile"
                app:layout_constraintVertical_bias="0" />


            <TextView
                android:id="@+id/youarewinnner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_2"

                android:layout_below="@+id/tvTitle"
                android:layout_alignStart="@+id/tvTitle"
                android:layout_alignEnd="@+id/tvTitle"
                android:fontFamily="@font/bebasneue_regular"
                android:gravity="center"
                android:maxWidth="@dimen/dp_200"
                android:maxLines="2"
                android:text="You are the winner"
                android:textColor="@android:color/black"
                android:textSize="@dimen/sp_18"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/tvTitle"
                app:layout_constraintStart_toStartOf="@+id/tvTitle"
                app:layout_constraintTop_toBottomOf="@+id/tvTitle"
                app:layout_constraintVertical_bias="0" />

            <TextView
                android:id="@+id/tvJustFinishedtext"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/youarewinnner"
                android:layout_alignStart="@+id/youarewinnner"
                android:layout_alignEnd="@+id/youarewinnner"
                android:fontFamily="@font/din_alternate_bold"
                android:text="shettyrohit"
                android:textColor="@color/black_btn"
                android:textSize="@dimen/sp_16"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/youarewinnner"
                app:layout_constraintStart_toStartOf="@+id/youarewinnner"
                app:layout_constraintTop_toBottomOf="@+id/youarewinnner"
                app:layout_constraintVertical_bias="0" />

        </LinearLayout>

        <LinearLayout


            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_200"
            android:gravity="center"
            android:orientation="vertical">

            <FrameLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_gravity="center_horizontal">

                <VideoView
                    android:id="@+id/videoPreviewWinner"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_200"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp_2"


                    android:layout_marginBottom="2dp" />

                <ProgressBar
                    android:id="@+id/progressbarr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/ivPlayButtonn"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:layout_gravity="center"
                    android:elevation="@dimen/dp_10"
                    android:scaleType="fitCenter"
                    android:visibility="gone"
                    app:srcCompat="@drawable/ic_play_circle_outline_black_24dp" />

                <ImageView
                    android:id="@+id/ivPlauseButtonnnnn"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:layout_gravity="center"
                    android:elevation="@dimen/dp_10"
                    android:scaleType="fitCenter"
                    android:visibility="gone"
                    app:srcCompat="@drawable/ic_pause_black_24dp" />

            </FrameLayout>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:padding="@dimen/dp_2">


                        <LinearLayout
                            android:id="@+id/imagecircle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/WinnerActivityimage"
                                android:layout_width="@dimen/dp_50"
                                android:layout_height="52dp"
                                android:scaleType="centerInside"
                                android:src="@drawable/rate_compete"
                                android:tint="@color/light_blue" />

                            <TextView

                                android:id="@+id/winnercompletionRate"
                                android:layout_width="match_parent"
                                android:gravity="center"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/bebase_font_family_regular"
                                android:text="SQUATS"
                                android:textAllCaps="true"
                                android:textColor="@color/light_blue"
                                android:textSize="@dimen/sp_16" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/bebase_font_family_regular"
                                android:text="Activity"
                                android:textAllCaps="true"
                                android:textColor="@color/black_btn"
                                android:textSize="@dimen/sp_12" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="@dimen/sp_10"
                            android:id="@+id/imageRoad"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/winnerRepsImage"
                                android:layout_width="@dimen/dp_35"
                                android:layout_height="@dimen/dp_35"
                                android:scaleType="centerInside"
                                android:src="@drawable/repsblack"
                                android:tint="@color/light_blue" />

                            <TextView
                                android:id="@+id/winnerreps"

                                android:layout_width="match_parent"
                                android:gravity="center"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/bebase_font_family_regular"
                                android:text="100"
                                android:textAllCaps="true"
                                android:textColor="@color/light_blue"
                                android:textSize="@dimen/sp_16" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/bebase_font_family_regular"
                                android:text="REPS"
                                android:textAllCaps="true"
                                android:textColor="@color/black_btn"
                                android:textSize="@dimen/sp_12" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="@dimen/sp_10"
                            android:id="@+id/imagewatch"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="@dimen/dp_35"
                                android:layout_height="@dimen/dp_35"
                                android:scaleType="centerInside"
                                android:src="@drawable/clock_black"
                                android:tint="@color/light_blue" />

                            <TextView
                                android:id="@+id/cwinnerTimeDuration"
                                android:layout_width="match_parent"
                                android:gravity="center"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/bebase_font_family_regular"
                                android:text="7 min 33 sec"
                                android:textAllCaps="true"
                                android:textColor="@color/light_blue"
                                android:textSize="@dimen/sp_16" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/bebase_font_family_regular"
                                android:text="DURATION"
                                android:textAllCaps="true"
                                android:textColor="@color/black_btn"
                                android:textSize="@dimen/sp_12" />

                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>

                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView

                        android:layout_width="@dimen/dp_35"
                        android:layout_height="@dimen/dp_35"
                        android:scaleType="centerInside"
                        android:src="@drawable/calendericon" />

                    <TextView

                        android:id="@+id/winnerDate"
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bebase_font_family_regular"
                        android:text="9 October 2019"
                        android:textColor="@color/light_blue"
                        android:textSize="@dimen/sp_16" />

                    <ImageView

                        android:layout_width="@dimen/dp_50"
                        android:layout_height="@dimen/dp_50"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:scaleType="centerInside"
                        android:src="@drawable/time_taken"
                        android:tint="@color/black_color" />

                    <TextView

                        android:id="@+id/winnerTime"
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bebase_font_family_regular"
                        android:text="5.55 am ist"
                        android:textColor="@color/light_blue"
                        android:textSize="@dimen/sp_16" />

                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="40dp"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_gravity="center"
            android:text=" VS"
            android:fontFamily="@font/bebasneue_regular"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@drawable/bluecircle"
            android:layout_height="40dp" />


    </LinearLayout>
</ScrollView>