<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivBackBtnnew"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_8"
                android:scaleType="centerInside"
                android:src="@drawable/back_icon"
                android:tint="@color/black_btn"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginEnd="@dimen/dp_4"
                android:ellipsize="end"
                android:fontFamily="@font/bebasneue_regular"
                android:gravity="center"
                android:maxWidth="@dimen/dp_200"
                android:maxLines="2"
                android:text="invite friends"
                android:textAllCaps="false"
                android:textColor="@android:color/black"
                android:textSize="@dimen/sp_20"
                android:textStyle="italic"
                android:visibility="visible" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/bottom_gray"></LinearLayout>


        <TextView
            android:background="@color/bottom_gray"
            android:padding="@dimen/dp_20"
            android:gravity="center"
            android:textColor="@color/black_btn"
            android:layout_marginTop="@dimen/dp_40"
            android:fontFamily="@font/googlesans_medium"
            android:layout_margin="@dimen/dp_20"
            android:layout_width="match_parent"
            android:textSize="@dimen/dp_16"
            android:layout_height="wrap_content"
            android:text="Iâ€™m inviting you to the Fitness Quotient by Furo Sports App. Click on the link below and install the FQ App. Know your fitness quotient, challenge yourself and #StayFitEveryday!" />


        <LinearLayout
            android:id="@+id/challengeFacebook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_100"
            android:layout_marginEnd="@dimen/dp_40"
            android:background="@drawable/background_border_blue_rounded"
            android:elevation="@dimen/dp_5"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/dp_5">


            <TextView
                android:id="@+id/facebook"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:elevation="@dimen/dp_5"
                android:fontFamily="@font/bebasneue_regular"
                android:padding="@dimen/dp_5"
                android:text="Invite  Facebook  Friends"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sp_16"
                android:textStyle="italic" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/share_whatsapp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_40"
            android:background="@drawable/background_border_green_rounded_xml"
            android:elevation="@dimen/dp_5"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/dp_5">


            <TextView
                android:id="@+id/whatsapp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:elevation="@dimen/dp_5"
                android:fontFamily="@font/bebasneue_regular"
                android:padding="@dimen/dp_5"
                android:text="Invite  Whatsapp Friends"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sp_16"
                android:textStyle="italic" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/llFlexibiltyChallenges"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_40"
            android:background="@drawable/background_border_black_with_black_rounded"
            android:elevation="@dimen/dp_5"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/dp_5"
            android:visibility="gone">


            <TextView
                android:id="@+id/contact"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:elevation="@dimen/dp_5"
                android:fontFamily="@font/bebasneue_regular"
                android:padding="@dimen/dp_5"
                android:text="Challange  Phone  Contacts"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sp_16"
                android:textStyle="italic"
                android:visibility="gone" />


        </LinearLayout>


    </LinearLayout>

</layout>