<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bitmap_of_bg"
    tools:context=".activity.newFeature.StepsTracker.FqStepsCounterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="336dp"
        android:layout_margin="?actionBarSize"
        android:background="@drawable/congrats_menu">

        <LinearLayout
            android:id="@+id/llClosedIcon"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:layout_gravity="end|center_horizontal"
            android:layout_marginTop="@dimen/dp_7"
            android:gravity="end|center_vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:gravity="center">

                <ImageView
                    android:layout_width="162dp"
                    android:layout_height="@dimen/dp_24"
                    android:layout_marginRight="@dimen/dp_30" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/llCongratsClosedIcon"
                tools:ignore="DuplicateIds"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="80"
                android:gravity="center">

                <ImageView
                    android:id="@+id/ivCongratsCancel"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="18dp"
                    android:src="@drawable/closediconwhite" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>