<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:gravity="center"
        android:background="@drawable/sign_up_background"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvTextSecond"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            android:layout_marginBottom="@dimen/dp_10"
            android:fontFamily="@font/bebasneue_regular"
            android:text="OTP has been sent to the registered email address."
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp_18"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/emailtextview"

            android:textSize="@dimen/dp_14"
            android:gravity="center"
            android:fontFamily="@font/din_alternate_bold"
            android:textColor="@color/white"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <EditText
            android:layout_marginTop="@dimen/dp_40"
            android:id="@+id/user_otp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            android:background="@drawable/background_border_gray_with_white_back_rounded"
            android:fontFamily="@font/din_alternate_bold"
            android:hint="Enter OTP"
            android:imeOptions="actionDone"
            android:padding="@dimen/dp_8"
            android:singleLine="true"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:textSize="@dimen/sp_16" />



        <EditText
            android:visibility="gone"
            android:id="@+id/email_id_Forget"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_gravity="center"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginRight="32dp"
            android:background="@drawable/background_border_gray_with_white_back_rounded"
            android:fontFamily="@font/din_alternate_bold"
            android:gravity="center"
            android:hint="Email"
            android:padding="@dimen/dp_8"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:textSize="@dimen/sp_18" />

        <EditText
            android:layout_marginTop="@dimen/dp_20"
            android:id="@+id/password_forget"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:inputType="textPassword"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            android:background="@drawable/background_border_gray_with_white_back_rounded"
            android:fontFamily="@font/din_alternate_bold"
            android:hint=" New password"
            android:imeOptions="actionDone"
            android:padding="@dimen/dp_8"
            android:singleLine="true"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:textSize="@dimen/sp_16" />


        <EditText
            android:layout_marginTop="@dimen/dp_20"
            android:id="@+id/confirm_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginEnd="32dp"
            android:inputType="textPassword"
            android:layout_marginRight="32dp"
            android:background="@drawable/background_border_gray_with_white_back_rounded"
            android:fontFamily="@font/din_alternate_bold"
            android:hint=" Confirm new password"
            android:imeOptions="actionDone"
            android:padding="@dimen/dp_8"
            android:singleLine="true"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:textSize="@dimen/sp_16" />


        <TextView


            android:textSize="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_30"
            android:gravity="center"
            android:fontFamily="@font/din_alternate_bold"
            android:textColor="@color/white"
            android:text="Didn't find the mail ?"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView

            android:textSize="@dimen/dp_14"
            android:gravity="center"
            android:fontFamily="@font/din_alternate_bold"
            android:textColor="@color/white"
            android:text="Don't forget to check the spam/junk folder"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView

            android:id="@+id/changedPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:layout_marginStart="32dp"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="@dimen/dp_8"
            android:background="@drawable/background_border_sky_blue_with_blue_background_rounded"
            android:elevation="@dimen/dp_4"
            android:fontFamily="@font/bebasneue_regular"
            android:letterSpacing=".05"
            android:padding="@dimen/dp_8"
            android:text="Change Password"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:textSize="@dimen/sp_20"
            android:textStyle="italic" />

    </LinearLayout>
</layout>