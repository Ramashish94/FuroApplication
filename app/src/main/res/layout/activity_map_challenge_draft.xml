<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".activity.challengeRecieve.ChallengeByUserandChallengeForUserDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/challengeDraft"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:visibility="gone"
            android:id="@+id/sendChallangeexpired"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"

            android:layout_marginStart="32dp"
            android:layout_marginTop="@dimen/dp_5"

            android:layout_marginEnd="32dp"

            android:background="@drawable/background_border_sky_blue_with_blue_background_rounded"
            android:elevation="@dimen/dp_4"
            android:fontFamily="@font/bebasneue_regular"
            android:letterSpacing=".05"
            android:padding="@dimen/dp_8"

            android:text="send challenge"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:textSize="@dimen/sp_20"
            android:textStyle="italic" />



    </LinearLayout>
</ScrollView>