<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llFqStepCounter"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fq_steps"
    android:orientation="vertical"
    tools:context=".activity.newFeature.StepsTracker.FqStepsCounterActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginBottom="?actionBarSize">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_20"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="?actionBarSize"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivBackIcon"
                        android:layout_width="@dimen/dp_60"
                        android:layout_height="@dimen/dp_30"
                        android:layout_weight="33"
                        android:src="@drawable/back_black_arrow" />


                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="27dp"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_weight="33"
                        android:src="@drawable/fqstepscounter" />


                    <ImageView
                        android:id="@+id/ivSetting"
                        android:layout_width="@dimen/dp_60"
                        android:layout_height="@dimen/dp_40"
                        android:layout_weight="33"
                        android:src="@drawable/ic_settings_black_24dp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/ivLeadBord"
                        android:layout_width="@dimen/dp_100"
                        android:layout_height="@dimen/dp_45"
                        android:src="@drawable/view_lead_board" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dp_20"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/dp_45"
                        android:layout_height="@dimen/dp_25"
                        android:src="@drawable/stepstext" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvCountsSteps"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0000"
                        android:textColor="@color/light_blue"
                        android:textSize="28sp"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_14"
                        android:fontFamily="@font/din_alter_nate_bold"
                        android:textStyle="bold"
                        android:textColor="#2F2F2F"
                        android:text=" / " />

                    <TextView
                        android:id="@+id/tvTotNumberOfSteps"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/din_alter_nate_bold"
                        android:textColor="#2F2F2F"
                        android:textSize="@dimen/sp_12"
                        android:textStyle="bold"
                        tools:text="38000" /><!--tools:text="Of 38000 Steps"-->
                </LinearLayout>

                <TextView
                    android:id="@+id/fit_Data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="8sp"
                    android:text="Hello World!"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="0.02"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/todayProgressTitle"
                    app:layout_constraintTop_toBottomOf="@+id/todayProgressTitle"
                    app:layout_constraintVertical_bias="0.02" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dp_15"
                    android:orientation="horizontal"
                    android:visibility="invisible">

                    <ImageView
                        android:id="@+id/ivModified"
                        android:layout_width="@dimen/dp_45"
                        android:layout_height="@dimen/dp_25"
                        android:src="@drawable/modified_bg" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dp_90"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="55"
                        android:orientation="vertical"
                        android:visibility="gone"
                        >

                        <ImageView
                            android:layout_width="@dimen/dp_35"
                            android:layout_height="@dimen/dp_20"
                            android:src="@drawable/time_" />

                        <TextView
                            android:id="@+id/tvTimes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_7"
                            android:textColor="@color/black_color"
                            android:textSize="23sp"
                            android:textStyle="normal"
                            tools:text="" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="45"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="@dimen/dp_75"
                                android:layout_height="@dimen/dp_20"
                                android:layout_marginTop="@dimen/dp_2"
                                android:src="@drawable/distance_" />

                            <androidx.appcompat.widget.SwitchCompat
                                android:id="@+id/swBtnInKm"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:checked="false"
                                android:text="  (in km)  "
                                android:textColor="#2A2929"
                                android:theme="@style/SCBSwitch" />
                        </LinearLayout>


                        <TextView
                            android:id="@+id/tvDistance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_7"
                            android:text="0"
                            android:textColor="@color/black_color"
                            android:textSize="23sp"
                            android:textStyle="normal"
                            tools:text="" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dp_20"
                    android:orientation="vertical">


                    <ImageView
                        android:layout_width="@dimen/dp_70"
                        android:layout_height="@dimen/dp_20"
                        android:src="@drawable/calories__" />
                    <!-- <TextView
                         android:layout_width="wrap_content"
                         android:text="Calories"
                         android:textStyle="bold"
                         android:textAllCaps="true"
                         android:layout_height="@dimen/dp_20"
                         android:src="@drawable/calories__" />-->

                    <TextView
                        android:id="@+id/tvCalories"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_7"
                        android:text="0.0"
                        android:textColor="@color/black_color"
                        android:textSize="23sp"
                        android:textStyle="normal"
                        tools:text="" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dp_20"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/dp_35"
                        android:layout_height="@dimen/dp_20"
                        android:src="@drawable/time_" />
                 <!--   <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_20"
                        android:src="@drawable/calories__"
                        android:text="DURATION(MIN)"
                        android:textStyle="bold" />-->

                    <TextView
                        android:id="@+id/tbduration"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_7"
                        android:text="0"
                        android:textColor="@color/black_color"
                        android:textSize="23sp"
                        android:textStyle="normal"
                        tools:text="" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginRight="@dimen/dp_15">

                        <Button
                            android:id="@+id/tvActivateStepsCounter"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_40"
                            android:layout_marginTop="?actionBarSize"
                            android:background="@drawable/btn_next_shape"
                            android:fontFamily="@font/bebas_neue_bold"
                            android:gravity="center"
                            android:text="Activate step counter"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_14"
                            android:textStyle="italic" />

                        <Button
                            android:id="@+id/deactivate"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_40"
                            android:layout_marginTop="?actionBarSize"
                            android:background="@drawable/btn_next_shape"
                            android:fontFamily="@font/bebas_neue_bold"
                            android:gravity="center"
                            android:text="Deactivate step counter"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_14"
                            android:textStyle="italic"
                            android:visibility="gone" />


                    </FrameLayout>


                    <TextView
                        android:id="@+id/tvDiActivate"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_40"
                        android:layout_marginTop="?actionBarSize"
                        android:background="@drawable/diactivate_bg"
                        android:fontFamily="@font/bebas_neue_bold"
                        android:gravity="center"
                        android:text="DiActivate"
                        android:textColor="@color/vertical_line_color"
                        android:textSize="@dimen/sp_14"
                        android:textStyle="italic"
                        android:visibility="gone" />


                    <LinearLayout
                        android:id="@+id/llMarkLapAndStop"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_45"
                        android:layout_marginTop="?actionBarSize"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/tvMarkLap"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_40"
                            android:layout_marginRight="@dimen/dp_10"
                            android:layout_weight="1"
                            android:background="@drawable/btn_next_shape"
                            android:fontFamily="@font/bebas_neue_bold"
                            android:gravity="center"
                            android:text="+  MarkLap"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_14"
                            android:textStyle="italic" />

                        <TextView
                            android:id="@+id/tvStop"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_40"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_weight="1"
                            android:background="@drawable/diactivate_bg"
                            android:fontFamily="@font/bebas_neue_bold"
                            android:gravity="center"
                            android:text="stop"
                            android:textColor="@color/vertical_line_color"
                            android:textSize="@dimen/sp_14"
                            android:textStyle="italic" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="?actionBarSize"
                        android:layout_marginLeft="32dp"
                        android:layout_marginTop="@dimen/dp_40"
                        android:layout_marginRight="32dp"
                        android:layout_marginBottom="?actionBarSize"
                        android:background="@drawable/tips_background"
                        android:orientation="horizontal">


                        <ImageView
                            android:layout_width="21dp"
                            android:layout_height="21dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="@dimen/dp_10"
                            android:src="@drawable/tipscircleicon" />

                        <TextView
                            android:id="@+id/tvPrizmTips"
                            android:layout_width="match_parent"
                            android:layout_height="?actionBarSize"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/dp_10"
                            android:layout_marginEnd="@dimen/dp_10"
                            android:gravity="center_vertical"
                            android:textColor="@color/vertical_line_color"
                            tools:text="Fun Facts" /><!--android:background="@drawable/slot_time_bottom_bg"-->

                    </LinearLayout>

                    <!-- <ImageView
                         android:layout_width="match_parent"
                         android:layout_height="@dimen/dp_45"
                         android:layout_marginTop="?actionBarSize"
                         android:layout_marginBottom="?actionBarSize"
                         android:src="@drawable/learn_prizm" />-->


                </LinearLayout>


            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:gravity="bottom"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivHistory"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:layout_gravity="bottom"
                android:src="@drawable/history" />

        </LinearLayout>

        <include
            android:id="@+id/incudeCongratsStepsTrack"
            layout="@layout/congrats_popup_menu_og_step_tracker"
            android:visibility="gone" />

        <include
            android:id="@+id/incudeAlertDialog"
            layout="@layout/alertt_dialog_modified_data_"
            android:visibility="gone" />

    </FrameLayout>
</LinearLayout>