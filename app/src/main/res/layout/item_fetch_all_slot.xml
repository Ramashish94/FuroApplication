<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_50"
    android:layout_gravity="center_horizontal"
    android:layout_marginBottom="@dimen/dp_15"
    android:background="@drawable/slot_bg"
    android:gravity="center_vertical">

    <LinearLayout
        android:id="@+id/llAllPlan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/llTimeSlot"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_weight="40">

            <ImageView
                android:id="@+id/ivCircle"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_gravity="center"
                android:gravity="center"
                android:src="@drawable/clock_image" />

            <TextView
                android:id="@+id/tvSlotCount"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_8"
                android:gravity="center_vertical"
                tools:text="Slot 1 - "
                android:textColor="@color/black_color"
                android:textSize="@dimen/sp_14"
                android:textStyle="normal"/>

            <TextView
                android:id="@+id/tvSlotTime"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textColor="@color/black_color"
                android:textSize="@dimen/sp_14"
                android:textStyle="normal"
                tools:text=" 09:00  " />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_weight="60">


            <LinearLayout
                android:id="@+id/llTimeDeleteSlot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="@dimen/dp_10"
                android:gravity="end"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivDelete"
                    android:layout_width="28dp"
                    android:layout_height="@dimen/dp_24"
                    android:layout_gravity="end"
                    android:gravity="center_vertical"
                    android:src="@drawable/delete_slot_icon" />


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>