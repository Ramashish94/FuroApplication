<?xml version="1.0" encoding="utf-8"?>
<layout>

<ScrollView android:layout_height="wrap_content" android:layout_width="match_parent"

    xmlns:android="http://schemas.android.com/apk/res/android"


 >
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">
    <include layout="@layout/layout_tool_bar_delhi_jogger_challanges" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginBottom="@dimen/dp_8"
        android:fontFamily="@font/bebase_font_family_regular"
        android:gravity="center"
        android:text="90 Km in 30 days"
        android:textAllCaps="true"
        android:textColor="@color/black_btn"
        android:textSize="@dimen/sp_20" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                android:scaleType="centerInside"
                android:src="@drawable/roaddistance" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bebase_font_family_regular"
                android:text="90"
                android:textAllCaps="true"
                android:textColor="@color/black_btn"
                android:textSize="@dimen/sp_20" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bebase_font_family_regular"
                android:text="Distance [KM]"
                android:textAllCaps="true"
                android:textColor="@color/black_btn"
                android:textSize="@dimen/sp_12" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                android:scaleType="centerInside"
                android:src="@drawable/time_taken" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bebase_font_family_regular"
                android:text="30 days"
                android:textAllCaps="true"
                android:textColor="@color/black_btn"
                android:textSize="@dimen/sp_20" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bebase_font_family_regular"
                android:text="Timelines"
                android:textAllCaps="true"
                android:textColor="@color/black_btn"
                android:textSize="@dimen/sp_12" />

        </LinearLayout>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginBottom="@dimen/dp_8"
        android:fontFamily="@font/bebase_font_family_regular"
        android:gravity="center"
        android:text="Your progress"
        android:textAllCaps="true"
        android:textColor="@color/black_btn"
        android:textSize="@dimen/sp_20" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_margin="@dimen/dp_8"
        android:padding="@dimen/dp_8"
        android:background="@drawable/background_border_blue_with_white_back">

       <!-- <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:rcBackgroundColor="@android:color/white"
            app:rcMax="100"
            app:rcProgress="50"
            app:rcProgressColor="@color/light_blue"
            app:rcRadius="@dimen/dp_20"
            app:rcSecondaryProgress="10"
            app:rcSecondaryProgressColor="@color/bottom_gray" />-->

    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginBottom="@dimen/dp_8"
        android:fontFamily="@font/bebase_font_family_regular"
        android:gravity="center"
        android:text="7 % Completed"
        android:textAllCaps="true"
        android:textColor="@color/black_btn"
        android:textSize="@dimen/sp_20" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                android:scaleType="centerInside"
                android:src="@drawable/roaddistance" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bebase_font_family_regular"
                android:text="2.1"
                android:textAllCaps="true"
                android:textColor="@color/black_btn"
                android:textSize="@dimen/sp_20" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bebase_font_family_regular"
                android:text="distance covered[km]"
                android:textAllCaps="true"
                android:textColor="@color/black_btn"
                android:textSize="@dimen/sp_12" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                android:scaleType="centerInside"
                android:src="@drawable/time_taken" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bebase_font_family_regular"
                android:text="3 days"
                android:textAllCaps="true"
                android:textColor="@color/black_btn"
                android:textSize="@dimen/sp_20" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bebase_font_family_regular"
                android:text="No of days past"
                android:textAllCaps="true"
                android:textColor="@color/black_btn"
                android:textSize="@dimen/sp_12" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                android:scaleType="centerInside"
                android:src="@drawable/time_taken" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bebase_font_family_regular"
                android:text="27 days"
                android:textAllCaps="true"
                android:textColor="@color/black_btn"
                android:textSize="@dimen/sp_20" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bebase_font_family_regular"
                android:text="No. of days left"
                android:textAllCaps="true"
                android:textColor="@color/black_btn"
                android:textSize="@dimen/sp_12" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout

        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_20"
        android:background="@color/bottom_gray"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_4"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginBottom="@dimen/dp_8"
        android:fontFamily="@font/bebase_font_family_regular"
        android:gravity="center"
        android:text="Community progress"
        android:textAllCaps="true"
        android:textColor="@color/black_btn"
        android:textSize="@dimen/sp_20" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/dp_8"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:fontFamily="@font/bebase_font_family_regular"
            android:gravity="center"
            android:text="Completion rate"
            android:textAllCaps="true"
            android:textColor="@color/black_btn"
            android:textSize="@dimen/sp_12" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_margin="@dimen/dp_8"
            android:padding="@dimen/dp_8"
            android:background="@drawable/background_border_blue_with_white_back">

            <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:rcBackgroundColor="@android:color/white"
                app:rcMax="100"
                app:rcProgress="30"
                app:rcProgressColor="@color/light_blue"
                app:rcRadius="@dimen/dp_20"
                app:rcSecondaryProgress="10"
                app:rcSecondaryProgressColor="@color/bottom_gray" />

        </LinearLayout>

    </LinearLayout>
    <TextView
        android:padding="@dimen/dp_8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_8"
        android:layout_marginStart="@dimen/dp_8"
        android:fontFamily="@font/bebase_font_family_regular"
        android:gravity="center"
        android:text="47 % completed\n you are ahead of 52% Participants keep it up."
        android:textAllCaps="true"
        android:textColor="@color/black_btn"
        android:textSize="@dimen/sp_20" />


</LinearLayout>
</ScrollView>
</layout>