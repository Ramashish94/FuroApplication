<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_50"
        android:id="@+id/llFlexibiltyChallenges"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_40"
        android:layout_marginEnd="@dimen/dp_40"
        android:background="@drawable/background_border_black_with_black_rounded"
        android:gravity="center"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/listTitle1"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_marginStart="@dimen/dp_4"
            android:layout_marginTop="@dimen/dp_2"
            android:layout_marginBottom="@dimen/dp_2"
            android:padding="@dimen/dp_4"
            app:srcCompat="@drawable/vector_smart_object_stretching" />


        <TextView
            android:id="@+id/listTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:fontFamily="@font/bebasneue_regular"
            android:text="Flexibility Challenge"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp_16"
            android:textStyle="italic" />

        <ImageView
            android:id="@+id/arroaw"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_4"
            android:padding="@dimen/dp_4"
            android:rotation="270"
            android:src="@drawable/back_icon" />
    </LinearLayout>

</LinearLayout>


</layout>