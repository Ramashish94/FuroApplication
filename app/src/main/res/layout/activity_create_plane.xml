<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clCreatePlanLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/create_plan_bg"
    android:orientation="vertical"
    tools:context=".activity.newFeature.waterIntakeCalculator.CreateAHydrationPlaneActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_40"
            android:layout_marginRight="@dimen/dp_30"
            android:layout_marginBottom="125dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/bebase_font_family_regular"
                        android:gravity="center"
                        android:text="CREATE A HYDRATION PLAN"
                        android:textColor="@color/black_color"
                        android:textSize="@dimen/dp_25"
                        android:textStyle="italic" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginTop="@dimen/dp_15"
                        android:gravity="center"
                        android:text="Your plan is ready!\n We have created the perfect programme for you according to your body needs.You can also customize it as per your requirements."
                        android:textColor="@color/black_btn"
                        android:textStyle="normal" />

                    <!-- <ImageView
                         android:layout_width="match_parent"
                         android:layout_height="80dp"
                         android:layout_gravity="start"
                         android:layout_marginTop="@dimen/dp_25"
                         android:src="@drawable/text_prefer" />-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_140"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dp_30"
                        android:background="@drawable/white_bg_create_bg"
                        android:gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="50"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/ivRecommendedPlan"
                                    android:layout_width="16dp"
                                    android:layout_height="@dimen/dp_20"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="@dimen/dp_10"
                                    android:layout_marginTop="@dimen/dp_5"
                                    android:gravity="center"
                                    android:src="@drawable/ellipse_20"
                                    android:visibility="gone"/>

                                <ImageView
                                    android:id="@+id/ivSelRecommendedPlan"
                                    android:layout_width="@dimen/dp_20"
                                    android:layout_height="@dimen/dp_20"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="@dimen/dp_10"
                                    android:layout_marginTop="@dimen/dp_5"
                                    android:gravity="center"
                                    android:src="@drawable/select_circle"
                                    android:visibility="gone" />

                                <RadioGroup
                                    android:id="@+id/rdbt_group"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:visibility="gone">

                                    <RadioButton
                                        android:id="@+id/rdBtnRecommendedPlan"
                                        android:layout_width="wrap_content"
                                        android:layout_height="@dimen/dp_20"
                                        android:layout_marginStart="@dimen/dp_10"
                                        android:layout_marginTop="@dimen/dp_8"
                                        android:layout_weight="1"
                                        android:clickable="true"
                                        android:gravity="center"
                                        android:src="@drawable/ellipse_20" />
                                </RadioGroup>

                                <TextView
                                    android:id="@+id/tvShowsMl"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="@dimen/dp_16"
                                    android:layout_marginTop="@dimen/dp_3"
                                    android:gravity="center_vertical"
                                    android:text="0000 ml"
                                    android:textColor="@color/light_blue"
                                    android:textSize="24sp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/llRecommended"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/dp_10"
                                android:layout_weight="50">

                                <TextView
                                    android:id="@+id/tvRecommended"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/dp_35"
                                    android:layout_marginTop="@dimen/dp_10"
                                    android:background="@drawable/recomendedbg"
                                    android:gravity="center"
                                    android:text="Recommended"
                                    android:textColor="@color/light_blue"
                                    android:textSize="@dimen/sp_14"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </LinearLayout>

                        <View
                            android:layout_width="312dp"
                            android:layout_height="1dp"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/dp_10"
                            android:background="@drawable/viewline" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginStart="@dimen/dp_10"
                                android:layout_weight="1">

                                <ImageView
                                    android:id="@+id/ivClockImg"
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/dp_20"
                                    android:layout_gravity="center_vertical"
                                    android:src="@drawable/clock_image" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <TextView
                                    android:id="@+id/tvEveryTime"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/dp_35"
                                    android:layout_marginStart="@dimen/dp_10"
                                    android:gravity="center_vertical"
                                    android:text="Every 00 minutes"
                                    android:textColor="@color/black_color"
                                    android:textSize="@dimen/sp_13"
                                    android:textStyle="normal" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dp_20"
                        android:orientation="vertical">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvAllPlan"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center" />

                        <LinearLayout
                            android:id="@+id/llOthersPlan"
                            android:layout_width="match_parent"
                            android:layout_height="?actionBarSize"
                            android:layout_marginTop="17dp"
                            android:layout_marginBottom="@dimen/dp_20"
                            android:background="@drawable/white_bg_create_bg"
                            android:gravity="center_vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                                <ImageView
                                    android:layout_width="@dimen/dp_20"
                                    android:layout_height="@dimen/dp_20"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="@dimen/dp_10"
                                    android:gravity="center"
                                    android:src="@drawable/ellipse_20"
                                    android:visibility="gone" />

                                <TextView
                                    android:id="@+id/tvShowMl2"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="@dimen/dp_10"
                                    android:gravity="center_vertical"
                                    android:text="Others"
                                    android:textSize="@dimen/sp_16"
                                    android:textStyle="normal" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/llMorePlan"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/dp_15"
                                android:layout_weight="1"
                                android:gravity="end|right">

                                <ImageView
                                    android:layout_width="22dp"
                                    android:layout_height="@dimen/dp_20"
                                    android:layout_gravity="center_vertical"
                                    android:src="@drawable/clock_image" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/dp_35"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="@dimen/dp_5"
                                    android:gravity="center_vertical"
                                    android:text="- - - - - - -"
                                    android:textColor="@color/black_color"
                                    android:textSize="@dimen/sp_14"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>


        </androidx.core.widget.NestedScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_30"
            android:layout_marginBottom="@dimen/dp_30"
            android:gravity="bottom"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/ivStartJourney"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_gravity="bottom"
                android:layout_marginTop="@dimen/dp_45"
                android:background="@drawable/startjounary" />

        </LinearLayout>

        <include
            android:id="@+id/includeCreatePlanPopUp"
            layout="@layout/create_plan_pop_up"
            android:visibility="gone" />
        <ProgressBar
            android:id="@+id/loadingProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:indeterminate="true"
            android:elevation="@dimen/dp_50"
            />

    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>