<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/create_plan_bg"
    android:orientation="vertical"
    tools:context=".activity.newFeature.waterIntakeCalculator.CreatePlaneActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="228dp"
                    android:layout_height="27dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="75dp"
                    android:src="@drawable/create_plan" />

                <LinearLayout
                    android:layout_width="312dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp_20">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:src="@drawable/title" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="312dp"
                    android:layout_height="@dimen/dp_165"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp_20"
                    android:background="@drawable/white_bg_create_bg"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="@dimen/dp_10"
                                android:layout_marginTop="@dimen/dp_10"
                                android:text="2219 ml"
                                android:textColor="@color/light_blue"
                                android:textSize="28sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/dp_10"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_35"
                                android:layout_marginTop="@dimen/dp_10"
                                android:background="@drawable/recomendedbg"
                                android:gravity="center"
                                android:text="Recommended"
                                android:textColor="@color/light_blue"
                                android:textSize="@dimen/sp_14"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="312dp"
                        android:layout_height="1dp"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/dp_10"
                        android:background="@drawable/viewline" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/dp_10"
                            android:layout_weight="1">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="27dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/clock_image" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/dp_10"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_35"
                                android:layout_marginStart="@dimen/dp_10"
                                android:gravity="center_vertical"
                                android:text="Every 45 minutes"
                                android:textColor="@color/black_color"
                                android:textSize="@dimen/sp_14"
                                android:textStyle="normal" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="240dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/create_auto_sheduled"
                        android:visibility="invisible">

                    </LinearLayout>

                </LinearLayout>


                <!-- <View
                     android:layout_width="312dp"
                     android:layout_height="1dp"
                     android:layout_gravity="center"
                     android:layout_marginTop="@dimen/dp_30"
                     android:background="@drawable/viewline" />

                 <ImageView
                     android:layout_width="228dp"
                     android:layout_height="27dp"
                     android:layout_gravity="center"
                     android:layout_marginTop="@dimen/dp_30"
                     android:src="@drawable/bedtime" />-->

                <LinearLayout
                    android:layout_width="312dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp_20"
                    android:orientation="vertical">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvBedTime"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_140"
                        android:layout_gravity="center" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginTop="17dp"
                        android:layout_marginBottom="@dimen/dp_20"
                        android:background="@drawable/white_bg_create_bg"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <ImageView
                                android:layout_width="@dimen/dp_20"
                                android:layout_height="@dimen/dp_20"
                                android:layout_gravity="center"
                                android:layout_marginStart="@dimen/dp_10"
                                android:gravity="center"
                                android:src="@drawable/ellipse_20" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="@dimen/dp_10"
                                android:gravity="center_vertical"
                                android:text="2219 ml"
                                android:textColor="@color/light_blue"
                                android:textSize="28sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/dp_15"
                            android:layout_weight="1"
                            android:gravity="end|right">

                            <ImageView
                                android:layout_width="27dp"
                                android:layout_height="27dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/clock_image" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/dp_35"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="@dimen/dp_5"
                                android:gravity="center_vertical"
                                android:text="- - - - - - -"
                                android:textColor="@color/black_color"
                                android:textSize="@dimen/sp_14"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:ignore="MissingConstraints"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/ivContinue"
                        android:layout_width="312dp"
                        android:layout_height="@dimen/dp_40"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="28dp"
                        android:layout_marginRight="28dp"
                        android:layout_marginBottom="45dp"
                        android:layout_marginTop="@dimen/dp_45"
                        android:background="@drawable/startjounary" />
                </LinearLayout>


            </LinearLayout>


        </androidx.core.widget.NestedScrollView>

        <include
            android:id="@+id/includeSecondLayerBgOfGlass"
            layout="@layout/create_plan_pop_up"
             />


    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>