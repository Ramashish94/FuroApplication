<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fq_steps"
    android:orientation="vertical"
    tools:context=".activity.newFeature.StepsTracker.FqStepsCounterActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginBottom="?actionBarSize">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="?actionBarSize"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivBackIcon"
                        android:layout_width="@dimen/dp_40"
                        android:layout_height="@dimen/dp_40"
                        android:layout_weight="30"
                        android:src="@drawable/back_black_arrow" />


                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="27dp"
                        android:layout_weight="40"
                        android:src="@drawable/fqstepscounter" />


                    <ImageView
                        android:id="@+id/ivSetting"
                        android:layout_width="@dimen/dp_40"
                        android:layout_height="@dimen/dp_40"
                        android:layout_weight="30"
                        android:src="@drawable/ic_settings_black_24dp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/ivLeadBord"
                        android:layout_width="@dimen/dp_100"
                        android:layout_height="@dimen/dp_45"
                        android:src="@drawable/view_lead_board" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dp_20"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/dp_45"
                        android:layout_height="@dimen/dp_25"
                        android:src="@drawable/stepstext" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvCountsSteps"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12000"
                        android:textColor="@color/light_blue"
                        android:textSize="28sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvTotNumberOfSteps"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/din_alter_nate_bold"
                        android:text="Of 38000 Steps"
                        android:textColor="#2F2F2F"
                        android:textSize="@dimen/sp_12"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dp_15"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivModified"
                        android:layout_width="@dimen/dp_45"
                        android:layout_height="@dimen/dp_25"
                        android:src="@drawable/modified_bg" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dp_100"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/dp_35"
                            android:layout_height="@dimen/dp_20"
                            android:src="@drawable/time_" />

                        <TextView
                            android:id="@+id/tvTimes"
                            android:layout_width="@dimen/dp_120"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_7"
                            android:text="49 Minutes"
                            android:textColor="@color/black_color"
                            android:textSize="23sp"
                            android:textStyle="normal" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/dp_75"
                            android:layout_height="@dimen/dp_20"
                            android:src="@drawable/distance_" />

                        <TextView
                            android:id="@+id/tvDistance"
                            android:layout_width="@dimen/dp_120"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_7"
                            android:text="128555"
                            android:textColor="@color/black_color"
                            android:textSize="23sp"
                            android:textStyle="normal" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="?actionBarSize"
                    android:orientation="vertical">


                    <ImageView
                        android:layout_width="@dimen/dp_70"
                        android:layout_height="@dimen/dp_20"
                        android:src="@drawable/calories__" />

                    <TextView
                        android:id="@+id/tvCalories"
                        android:layout_width="@dimen/dp_120"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_7"
                        android:text="315 Cal"
                        android:textColor="@color/black_color"
                        android:textSize="23sp"
                        android:textStyle="normal" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="?actionBarSize"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvActivateStepsCounter"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_40"
                        android:background="@drawable/btn_next_shape"
                        android:fontFamily="@font/bebas_neue_bold"
                        android:gravity="center"
                        android:text="Activate step counter"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_14"
                        android:textStyle="italic" />

                    <TextView
                        android:id="@+id/tvDiActivate"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_40"
                        android:background="@drawable/diactivate_bg"
                        android:fontFamily="@font/bebas_neue_bold"
                        android:gravity="center"
                        android:text="DiActivate"
                        android:textColor="@color/vertical_line_color"
                        android:textSize="@dimen/sp_14"
                        android:textStyle="italic"
                        android:visibility="gone" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/learn_prizm" />


                </LinearLayout>


            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:gravity="bottom"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivHistory"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:layout_gravity="bottom"
                android:src="@drawable/history" />

        </LinearLayout>
        <include layout="@layout/congrats_popup_menu_og_step_tracker"
            android:id="@+id/incudeCongratsStepsTrack"
            android:visibility="gone"/>

    </FrameLayout>
</LinearLayout>