<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/llGlassMeasuring"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@drawable/glassbg1"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/ivGlass"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_24"
            android:src="@drawable/glassicon"
            android:layout_marginTop="@dimen/dp_6"/>

        <TextView
            android:id="@+id/tvWaterMlSize"
            android:layout_width="match_parent"
            android:layout_height="@dimen/sp_16"
            android:text="200 ml"
            android:layout_marginTop="@dimen/dp_6"
            android:gravity="center" />

        <View
            android:layout_width="41dp"
            android:layout_height="@dimen/dp_1"
            android:background="@drawable/glass_line"
            android:layout_marginTop="@dimen/dp_6"/>

        <ImageView
            android:id="@+id/ivPlusIcon"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:src="@drawable/plus_icon"
            android:layout_marginTop="@dimen/dp_6"/>
        <ImageView
            android:id="@+id/ivCheckIcon"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:src="@drawable/checkicon"
            android:layout_marginTop="@dimen/dp_6"
            android:visibility="gone"/>
    </LinearLayout>


</LinearLayout>